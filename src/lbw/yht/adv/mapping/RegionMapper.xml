<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="lbw.yht.adv.dao.IRegionDao">

	<resultMap type="lbw.yht.adv.domain.Region" id="region">
		<id column="code" property="code" />
		<result column="name" property="name" />
		<result column="parent_code" property="parentCode" />
	</resultMap>

	<!-- 查询所有地区信息 -->
	<select id="queryRegionAll" resultMap="region">
		select code, name,
		parent_code from region
	</select>

	<select id="getRegionByParentCode" resultMap="region"
		parameterType="String">
		select code, name, parent_code from region where
		parent_code=#{code}
	</select>

	<select id="getParentRegionAll" resultMap="region"
		parameterType="String">
		select code, name, parent_code from region where
		parent_code is null
	</select>



	<select id="getRegionByChildrenCode" resultType="String"
		parameterType="String">
		select parent_code from region where
		code=#{code}
	</select>


</mapper>